const express = require('express');
const router = express.Router();
const authController = require('../controllers/authController');
const { authenticateToken } = require('../middleware/auth');

/**
 * Authentication Routes
 * Base path: /api/auth
 */

// New email-based authentication routes

/**
 * @route   POST /api/auth/signup
 * @desc    Register a new user with email verification
 * @access  Public
 * @body    { fullName, email, password }
 */
console.log('Setting up POST /signup route');
router.post('/signup', authController.signup);

/**
 * @route   POST /api/auth/verify-email
 * @desc    Verify email with code
 * @access  Public
 * @body    { email, code }
 */
console.log('Setting up POST /verify-email route');
router.post('/verify-email', authController.verifyEmail);

/**
 * @route   POST /api/auth/resend-verification
 * @desc    Resend verification code
 * @access  Public
 * @body    { email }
 */
console.log('Setting up POST /resend-verification route');
router.post('/resend-verification', authController.resendVerificationCode);

/**
 * @route   POST /api/auth/login
 * @desc    Login user with email and password
 * @access  Public
 * @body    { email, password }
 */
console.log('Setting up POST /login route');
router.post('/login', authController.login);

/**
 * @route   POST /api/auth/forgot-password
 * @desc    Send password reset link
 * @access  Public
 * @body    { email }
 */
console.log('Setting up POST /forgot-password route');
router.post('/forgot-password', authController.forgotPassword);

/**
 * @route   POST /api/auth/reset-password
 * @desc    Reset password with token
 * @access  Public
 * @body    { token, newPassword }
 */
console.log('Setting up POST /reset-password route');
router.post('/reset-password', authController.resetPassword);

// Legacy routes for backward compatibility

/**
 * @route   POST /api/auth/register
 * @desc    Register a new user (legacy username-based)
 * @access  Public
 * @body    { username, password }
 */
console.log('Setting up POST /register route (legacy)');
router.post('/register', authController.register);

/**
 * @route   POST /api/auth/refresh-token
 * @desc    Refresh access token using refresh token
 * @access  Public
 * @body    { refreshToken }
 */
router.post('/refresh-token', authController.refreshToken);

/**
 * @route   POST /api/auth/logout
 * @desc    Logout user (invalidate refresh token)
 * @access  Private (requires authentication)
 */
router.post('/logout', authenticateToken, authController.logout);

/**
 * @route   GET /api/auth/profile
 * @desc    Get current user profile
 * @access  Private (requires authentication)
 */
router.get('/profile', authenticateToken, authController.getProfile);

/**
 * @route   GET /api/auth/verify
 * @desc    Verify if user is authenticated (token validation)
 * @access  Private (requires authentication)
 */
router.get('/verify', authenticateToken, (req, res) => {
  res.status(200).json({
    success: true,
    message: 'Token is valid',
    data: {
      user: req.user.toSafeObject()
    }
  });
});

module.exports = router;
